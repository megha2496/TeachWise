<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.jain.teacherevaluation.SplashActivity">

    <TextView
        android:id="@+id/textViewSplashQuotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Education is the key to unlock the golden door of freedom."
        android:textColor="#1B5E20"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewSplashLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textViewSplashTeachWise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TeachWise"
        android:textColor="#1B5E20"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSplashProgressBarOpening"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000" />

    <ProgressBar
        android:id="@+id/progressBarSplash"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
</LinearLayout>
