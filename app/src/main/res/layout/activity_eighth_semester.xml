<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF9C4"
    tools:context="com.example.jain.teacherevaluation.EighthSemesterActivity">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="5">


        <TextView
            android:id="@+id/textViewEighthSemesterChoose"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/choose"
            android:textColor="#1b1b68"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEighthSemesterDWDM"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="QuestionList"
            android:text="1. DWDM"
            android:textSize="25sp"
            android:textColor="#1e1e1e"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEighthSemesterNNFL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="QuestionList"
            android:text="2. NNFL"
            android:textColor="#1e1e1e"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEighthSemesterICG"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="QuestionList"
            android:text="3. ICG"
            android:textColor="#1e1e1e"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEighthSemesterES"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="QuestionList"
            android:text="4. ES"
            android:textColor="#1e1e1e"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>