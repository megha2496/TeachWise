<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context="com.example.jain.teacherevaluation.LoginActivity">


    <LinearLayout
        android:id="@+id/linearLayoutHomeTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#FFF9C4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageViewLoginLogo"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textViewLoginTeachWise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TeachWise"
            android:textColor="#FF5B0845"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutHomeMiddle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#f77d55"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="5">


        <TextView
            android:id="@+id/textViewLoginFacultyWelcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FACULTY LOGIN SECTION"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextLoginFacultyUserID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="User ID"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextLoginFacultyPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />
        <!-- android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified" -->


        <Button
            android:id="@+id/buttonLoginFacultySignin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/form_button_background"
            android:onClick="LoginFaculty"
            android:text="Sign in "
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>
